<div class="container p-4">
    <div class="row">
        {{#each emp}}
            <div class=".grid col-md-6 p-1">
                <div class="card text-center">
                    <a href="/empleados/edit/{{id}}" class="btn">
                    <div class=".nested-grid">
                    <h6 style="font-size:13px;" class=".nested-grid text-uppercase">
                            Id: {{id}}
                        </h6>
                    
                        <div class=".nested-grid">
                        <img src="/img/perfil.jpeg" alt="Logo Opton"  width="30%" height="30%">
                        </div>
                        <h6 style="font-size:13px;" class=".nested-grid text-uppercase">
                            Nombre: {{name}}
                        </h6>
                        <h6 style="font-size:13px;" class=".nested-grid text-uppercase">
                            Apellido: {{last_name}}
                        </h6>
                        <h6 style="font-size:13px;" class=".nested-grid text-uppercase">
                            Puesto: {{job_title}}
                        </h6>
                            <h6 style="font-size:13px;" class=".nested-grid text-uppercase">
                            Edad: {{age}}
                        </h6>
                        </h6>
                        <h6 style="font-size:13px;" class=".nested-grid text-uppercase">
                            email: {{email}}
                        </h6>
                        <h6 style="font-size:13px;" class=".nested-grid text-uppercase">
                            Dirección: {{adress}}
                        </h6>
                        <h6 style="font-size:13px;" class=".nested-grid text-uppercase">
                            Teléfono: {{phone}}
                        </h6>
                        <h6 style="font-size:13px;" class=".nested-grid text-uppercase">
                            Estatus: {{estatus}}
                        </h6>
                        <h6 style="font-size:13px;" class=".nested-grid text-uppercase">
                            Fecha de Ingreso: {{timeago created_at}}
                        </h6>
                        </div>
                    </a>
                </div>
            </div>
            {{else}}
            <div class="col-md4 mx-auto">
                <div class="card card-body text-center">
                    <p>Aún no hay empleados capturados.</p>
                    <a href="/empleados/add">Crea un empleado.</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>