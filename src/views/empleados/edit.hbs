<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                <img src="/img/perfil.jpeg" alt="Logo Opton" class="p-4 center" width="30%" height="30% ">
                    <form action="/empleados/edit/{{empleados.id}}" method="POST">
 
                    <div class="form-group">
                    
                        <input type="text" value = "{{empleados.name}}" class= "form-control" name="name" placeholder="Name" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="text" value = "{{empleados.last_name}}" name ="last_name" class ="form-control" placeholder="Last Name">
                    </div>
                    <div class="form-group">
                        <input type="text" class= "form-control" value = "{{empleados.job_title}}" name="job_title" placeholder="Job Title" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="text" value = "{{empleados.age}}" name ="age" class ="form-control" placeholder="Age">
                    </div>
                    <div class="form-group">
                        <input type="email" class= "form-control" value = "{{empleados.email}}" name="email" placeholder="Email" autofocus>
                    </div>
                    <div class="form-group">
                        <label for="img">Select image:</label>
                        <input style="font-size:13px;" type="file" id="img"name="photo" accept="image/*" required>
                   </div>
                    <div class="form-group">
                        <input type="text" class= "form-control" value = "{{empleados.adress}}" name="adress" placeholder="Adress" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="text" value = "{{empleados.phone}}" name ="phone" class ="form-control" placeholder="Phone">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success btn-block">
                            Save
                        </button>
                    </div>
                        <a href="empleados/delete/{{empleados.id}}" class="btn btn-danger btn-block">
                            Delete 
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>